/* pages/jokes/joke.wxss */
page {
  background-color: #fff2df;
}
.joke-container {
  width: 100%;
  display: flex;
  margin: 10rpx 0;
  flex-direction: column;
}
.joke {
  height: auto;
  margin: 15rpx 20rpx;
  padding: 10rpx;
  padding-bottom: 20rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 2px 2px 4px #ef7a82;
  color: #ef7a82;
  display: flex;
  flex-direction: column;
}
.joke-content {
  width: 100%;
  margin: 20rpx 0 15rpx;
  padding-right: 20rpx;
  text-indent: 24rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  letter-spacing: 1rpx;
}
.joke-date {
  width: 300rpx;
  float: right;
  margin-left: 420rpx;
}