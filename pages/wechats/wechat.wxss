.detail-title {
  height: 80rpx;
  font-size: 30rpx;
  font-weight: bold;
  margin: 20rpx 0;
  display: block;
  text-align: center;
  width:100%;
}
.back-button {
  position: fixed;
  top: 300rpx;
  right: 10rpx;
}
.wxParse-p {
  font-size: 24rpx;
}
.wxParse-inline {
  text-indent: 2em;
}
.wxParse-p image {
  margin: 0 auto;
}
.wxParse-img {
  display: blcok;
  margin: 0 auto;
}
